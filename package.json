{
  "name": "copenhagen_theme",
  "version": "1.0.0",
  "repository": "git@github.com:zendesk/copenhagen_theme.git",
  "scripts": {
    "prebuild": "rm -f assets/*-bundle.js",
    "build": "vite build --config vite.theme.config.ts && vite build --config vite.react-modules.config.ts",
    "clear:statics": "echo '' > theme/style.css && echo '' > theme/script.js",
    "dev:react": "yarn prebuild && vite dev --host --config vite.react-modules.config.ts",
    "dev:theme": "yarn clear:statics && vite dev --host --config vite.theme.config.ts",
    "dev": "concurrently -n \"theme-server,react-server,zcli-server\" -c \"blue,green\" \"yarn dev:theme\" \"yarn dev:react\" \"yarn preview\"",
    "preview": "zcli themes:preview theme",
    "repo": "open https://github.com/robertschwarz/zd-copenhagen-base-vite",
    "tu": "zcli themes:update theme --themeId=504fe318-c30a-42e0-90c2-249d9e334347"
  },
  "dependencies": {
    "@zendesk/help-center-wysiwyg": "0.0.5",
    "@zendeskgarden/container-grid": "^3.0.14",
    "@zendeskgarden/container-utilities": "^2.0.2",
    "@zendeskgarden/react-accordions": "8.76.9",
    "@zendeskgarden/react-buttons": "8.76.9",
    "@zendeskgarden/react-datepickers": "8.76.9",
    "@zendeskgarden/react-dropdowns.next": "8.76.9",
    "@zendeskgarden/react-forms": "8.76.9",
    "@zendeskgarden/react-loaders": "8.76.9",
    "@zendeskgarden/react-modals": "8.76.9",
    "@zendeskgarden/react-notifications": "8.76.9",
    "@zendeskgarden/react-tags": "8.76.9",
    "@zendeskgarden/react-theming": "8.76.9",
    "@zendeskgarden/react-tooltips": "8.76.9",
    "@zendeskgarden/react-typography": "8.76.9",
    "@zendeskgarden/svg-icons": "^6.34.0",
    "dompurify": "3.2.4",
    "eslint-plugin-check-file": "^2.6.2",
    "i18next": "^23.10.1",
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^14.2.3",
    "react-i18next": "^14.1.0",
    "react-is": "^17.0.2",
    "styled-components": "^5.3.11"
